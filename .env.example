# AWS Credentials for Nova Sonic
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Audio Device Indexes (find with: arecord -l and aplay -l)
AUDIO_INPUT_INDEX=1
AUDIO_OUTPUT_INDEX=0

# Motor Configuration (optional overrides)
MOUTH_MOTOR=2
TORSO_MOTOR=1
MOUTH_DIR=1
TORSO_DIR=1

# Torso Movement Tuning (optional)
TORSO_THROTTLE_FWD=0.55
TORSO_THROTTLE_BACK=-0.55
TORSO_BACK_SEC=0.45

# Button Configuration (optional)
BUTTON_PIN=17        # Front button for listening toggle
SHUTDOWN_PIN=27      # Back button for shutdown
